<section class="container-fluid cpcontainer">
<%= render partial: "cp/cp" %>
	<section class="col-sm-9 pagecontainer ">
		<table class="table table-striped table-bordered table-hover">
	    <thead>
	      <tr>
	        <th>Section</th>
	        <th>Statistics</th>
	      </tr>
	    </thead>
	    <tbody>
	      <tr class="info">
	        <td>Users</td>
	        <td><%=@users.length%></td>
	      </tr>
	      <tr class="warning">
	        <td>Facebook users</td>
	        <td><%=@users.where('provider = ?', 'facebook').length%></td>
	      </tr>
	      <tr class="warning">
	        <td>Google users</td>
	        <td><%=@users.where('provider = ?', 'google_oauth2').length%></td>
	      </tr>
	      <tr class="warning">
	        <td>Manual registered users</td>
	        <td><%=@users.where('provider IS NULL').length%></td>
	      </tr>
	      <tr class="info">
	        <td>Queries</td>
	        <td><%=@queries.length%></td>
	      </tr>
	      <tr class="info">
	        <td>Invoices</td>
	        <td><%=@invoices.length%></td>
	      </tr>
	      <tr class="warning">
	        <td>Unpaid Invoices</td>
	        <td><%=@invoices.where('paid = ?', false).length%></td>
	      </tr>
	      <tr class="warning">
	        <td>Paid Invoices</td>
	        <td><%=@invoices.where('paid = ?', true).length%></td>
	      </tr>
	    </tbody>
	  </table>
	</section>
</section>
<script>
		$(document).ready(function(){
			$('#newstab').attr('class', 'list-group-item');
			$('#statisticstab').attr('class', 'list-group-item active');
		})
	</script>