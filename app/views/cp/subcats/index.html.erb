<section class="container-fluid cpcontainer">
<%= render partial: "cp/cp" %>
	<section class="col-sm-9 pagecontainer ">
	<a href="/cp/subcats/new"><button class="btn btn-primary">New Service</button></a>
	<% @cats.each do |c| %>
	<h2><%= c.title %></h2><a href="/cp/cats/<%=c.id%>/edit">Edit</a>
	<table class="table table-striped table-bordered table-hover table-condensed table-responsive">
			<tr>
		    	<th>id</th>
		    	<th>Category</th>
		    	<th>Subcategory</th>
		    	<th>Description</th>
		    	<th>Edit</th>
		    	<th>Destroy</th>
			</tr>
		<% c.subcats.order("created_at ASC").each do |s| %>
			<tr>
				<th><%=s.id%></th>
				<th><%=s.cat.title%></th>
				<th><%=s.title%></th>
				<th><%=simple_format(s.description)%></th>
				<th><%= link_to "edit", edit_cp_subcat_path(s) %></th>
				<th><%= link_to 'Destroy', cp_subcat_path(s),  method: :delete, data: { confirm: 'Are you sure?' } %></th>
			</tr>
		<% end %>
	</table>
	<% end %>
	</section>
</section>
<script>
		$(document).ready(function(){
			$('#newstab').attr('class', 'list-group-item');
			$('#servicestab').attr('class', 'list-group-item active');
		})
	</script>